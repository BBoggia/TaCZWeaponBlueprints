{
    // 使用我们放入的模型文件：models/gun/ak47_geo.json。注意，不需要包含文件后缀，也不要包含开头的 "models/"。
    "model": "oldgun:gun/sten_geo",
    // 使用我们放入的模型贴图：textures/gun/uv/ak47.png。注意，不需要包含文件后缀，也不要包含开头的 "textures/"。
    "texture": "oldgun:gun/uv/sten",
    // 使用我们放入的背包 2D 贴图：textures/gun/slot/ak47.png。注意，不需要包含文件后缀，也不要包含开头的 "textures/"。
    "slot": "oldgun:gun/slot/sten",
    "hud": "oldgun:gun/hud/sten",
    "sounds": {
        "shoot": "tacz:uzi/uzi_shoot",
        "dry_fire": "oldgun:ppsh41/ppsh41_dry_fire",
        "reload_empty": "oldgun:ppsh41/ppsh41_reload_empty",
        "reload_tactical": "oldgun:ppsh41/ppsh41_reload_tactical",
        "inspect": "oldgun:ppsh41/ppsh41_inspect",
        "inspect_empty": "oldgun:ppsh41/ppsh41_inspect_empty",
        "draw": "oldgun:ppsh41/ppsh41_draw",
        "put_away": "oldgun:ppsh41/ppsh41_put_away",
        "silence": "oldgun:ppsh41/ppsh41_silence",
        "silence_3p": "tacz:uzi/uzi_shoot_3p"
    },
    "animation": "oldgun:sten",
  // 指定使用缺省动画tacz:ak47，oldgun:ppsh41可为空。如果上文指定的动画文件里缺少某个动画，如 draw 动画，则会从缺省动画拷贝。
  // 值可为 rifle、pistol
    "use_default_animation": "rifle",
    "shell": {
      "initial_velocity": [5, 2, 1],
      "random_velocity": [1, 1, 0.25],
      "acceleration": [0.0, -10, 0.0],
      "angular_velocity": [360, -1200, 90],
      "living_time": 1.0
    },
    "muzzle_flash": {
      // 枪口火焰贴图路径
      "texture": "tacz:flash/common_muzzle_flash",
      // 缩放系数
      "scale": 1
    },
    "transform": {
        "scale": {
            // 第三人称手部
            "thirdperson": [
                0.6,
                0.6,
                0.6
            ],
            // 掉落物
            "ground": [
                0.6,
                0.6,
                0.6
            ],
            // 展示框
            "fixed": [
                1.0,
                1.0,
                1.0
            ]
        }
    },
    // 第三人称持枪动画，直接填入default
    "third_person_animation": "default"
}
